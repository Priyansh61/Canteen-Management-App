<html>
    <head>
        <style>
            table{
                font-family: Arial, Helvetica, sans-serif;
                border-collapse: collapse;
                width:100%;
            }
            td, th{
                border: 1px solid #ddd;
                text-align: left;
                padding: 8px;
            }
        </style>
    </head>

    <body>
        <h3 style="text-align:center;">Canteen Management App</h3>
        <table>
            <tr>
                <th>Name: <% =name%></th>
                <th>Email: <% =email%></th>
            </tr>
            <tr>
                <th>Contact Number: <% =contactNo%></th>
                <th>Payment Method: <% =paymentMethod%></th>
            </tr>
        </table>

        <h3>Product Details</h3>
        <table>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Sub Total</th>
            </tr>
            <%if(products.length>0){%>
                <%products.forEach(function(product){%>
                    <tr>
                        <td><% =product.name%></td>
                        <td><% =product.category%></td>
                        <td><% =product.price%></td>
                        <td><% =product.quantity%></td>
                        <td><% =product.subTotal%></td>
                    </tr>
                <%})%>
            <%}%>
        </table>
        <h3 style="text-align:right;">Total: <% =total%></h3>
        <h3>Thank you for Ordering. Have a great meal. :)</h3>
    </body>
</html>